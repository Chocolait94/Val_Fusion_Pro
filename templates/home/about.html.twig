{% extends 'base.html.twig' %}

{% block title %}À Propos - VAL Fusion{% endblock %}

{% block body %}
<style>
/* ============================================
   ANIMATIONS PREMIUM ABOUT PAGE
   ============================================ */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes countUp {
    from {
        opacity: 0;
        transform: scale(0.5);
    }
    to {
        opacity: 1;
        transform: scale(1);
    }
}

@keyframes teamFloat {
    0%, 100% {
        transform: translateY(0);
    }
    50% {
        transform: translateY(-10px);
    }
}

/* Fix scroll bugs */
section {
    transform: none !important;
}

/* Optimisation Mobile */
@media (max-width: 768px) {
    * {
        animation-duration: 0.3s !important;
    }
    
    .btn-about {
        min-height: 48px;
        padding: 1rem 2rem !important;
        width: 100%;
    }
    
    h1 {
        font-size: 2.5rem !important;
        line-height: 1.2;
    }
    
    h2 {
        font-size: 1.875rem !important;
    }
    
    /* Timeline verticale optimisée */
    .timeline-item {
        padding-left: 2rem;
    }
    
    .timeline-item::before {
        width: 0.75rem;
        height: 0.75rem;
    }
    
    /* Chiffres clés plus petits */
    .text-6xl {
        font-size: 2.5rem !important;
    }
}

/* Texte premium */
.premium-text {
    background: linear-gradient(135deg, #dc2626 0%, #f43f5e 50%, #ef4444 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    filter: drop-shadow(0 4px 8px rgba(220, 38, 38, 0.3));
}

/* Timeline */
.timeline-item {
    position: relative;
    padding-left: 3rem;
}

.timeline-item::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.5rem;
    width: 1rem;
    height: 1rem;
    background: linear-gradient(135deg, #dc2626, #f43f5e);
    border-radius: 50%;
    box-shadow: 0 0 0 4px rgba(220, 38, 38, 0.2);
}

.timeline-item::after {
    content: '';
    position: absolute;
    left: 0.45rem;
    top: 1.5rem;
    width: 2px;
    height: calc(100% - 1rem);
    background: linear-gradient(180deg, #f43f5e, transparent);
}

.timeline-item:last-child::after {
    display: none;
}

/* Bouton about */
.btn-about {
    position: relative;
    overflow: hidden;
    background: linear-gradient(135deg, #dc2626 0%, #f43f5e 100%);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.btn-about::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    transition: left 0.5s;
}

.btn-about:hover::before {
    left: 100%;
}

.btn-about:hover {
    transform: translateY(-3px);
    box-shadow: 0 20px 40px rgba(220, 38, 38, 0.5);
}

/* Animation du fond rouge */
@keyframes gradientShift {
    0%, 100% {
        background-position: 0% 50%;
    }
    50% {
        background-position: 100% 50%;
    }
}

@keyframes float {
    0%, 100% {
        transform: translateY(0px) rotate(0deg);
    }
    50% {
        transform: translateY(-20px) rotate(180deg);
    }
}

@keyframes pulse {
    0%, 100% {
        opacity: 0.5;
        transform: scale(1);
    }
    50% {
        opacity: 0.8;
        transform: scale(1.1);
    }
}

.hero-red-gradient {
    background: linear-gradient(135deg, #7f1d1d, #991b1b, #dc2626, #ef4444, #f87171);
    background-size: 400% 400%;
    animation: gradientShift 20s ease infinite;
}

.floating-shapes-red {
    animation: float 8s ease-in-out infinite;
}

.pulse-shape {
    animation: pulse 4s ease-in-out infinite;
}
</style>

{# Hero Section #}
