                <p class="text-gray-600 mb-4">Nos bureaux</p>
                <p class="text-gray-800 font-semibold">
                    101 Rue Grande<br>
                    27100 Val-de-Reuil
                </p>
            </div>
        </div>
    </div>
</section>

{# Section Formulaire de Contact #}
<section class="py-20 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12" data-aos="fade-up">
            <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
                Envoyez-nous un <span class="text-indigo-600">Message</span>
            </h2>
            <div class="w-24 h-1.5 bg-indigo-600 mx-auto rounded-full mb-6"></div>
            <p class="text-lg text-gray-700">
                Remplissez le formulaire ci-dessous et nous vous répondrons dans les plus brefs délais
            </p>
        </div>
        
        <div class="bg-gradient-to-br from-indigo-50 to-purple-50 rounded-3xl p-8 md:p-12 shadow-xl" data-aos="fade-up" data-aos-delay="200">
            {{ form_start(contactForm, {'attr': {'class': 'space-y-6'}}) }}
            
            {# Nom #}
            <div>
                {{ form_label(contactForm['name'], null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-900 mb-2'}}) }}
                {{ form_widget(contactForm['name'], {'attr': {'class': 'form-input w-full px-4 py-3 rounded-xl border-2 border-gray-200 focus:border-indigo-500 focus:ring-4 focus:ring-indigo-200 transition-all duration-300', 'placeholder': 'Votre nom'}}) }}
                {{ form_errors(contactForm['name']) }}
            </div>
            
            {# Email #}
            <div>
                {{ form_label(contactForm['email'], null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-900 mb-2'}}) }}
                {{ form_widget(contactForm['email'], {'attr': {'class': 'form-input w-full px-4 py-3 rounded-xl border-2 border-gray-200 focus:border-indigo-500 focus:ring-4 focus:ring-indigo-200 transition-all duration-300', 'placeholder': 'votre.email@exemple.com'}}) }}
                {{ form_errors(contactForm['email']) }}
            </div>
            
            {# Message #}
            <div>
                {{ form_label(contactForm['message'], null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-900 mb-2'}}) }}
                {{ form_widget(contactForm['message'], {'attr': {'class': 'form-input w-full px-4 py-3 rounded-xl border-2 border-gray-200 focus:border-indigo-500 focus:ring-4 focus:ring-indigo-200 transition-all duration-300', 'rows': '6', 'placeholder': 'Décrivez votre projet ou votre demande...'}}) }}
                {{ form_errors(contactForm['message']) }}
            </div>
            
            {# RGPD #}
            <div class="bg-white rounded-xl p-6 border-2 border-indigo-100">
                <div class="flex items-start gap-3">
                    <div class="flex-shrink-0 mt-1">
                        {{ form_widget(contactForm['consent'], {'attr': {'class': 'w-5 h-5 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500'}}) }}
                    </div>
                    <div class="flex-1">
                        {{ form_label(contactForm['consent'], null, {'label_attr': {'class': 'text-sm text-gray-700'}}) }}
                        {{ form_errors(contactForm['consent']) }}
                    </div>
                </div>
            </div>
            
            {# Bouton Submit #}
            <div class="text-center">
                <button type="submit" class="btn-contact inline-flex items-center justify-center gap-3 px-12 py-4 text-white rounded-full font-bold text-lg shadow-2xl">
                    <span class="relative z-10">Envoyer le message</span>
                    <svg class="w-6 h-6 relative z-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                    </svg>
                </button>
            </div>
            
            {{ form_end(contactForm) }}
        </div>
    </div>
    {# Ere were * : Oui viens #}
    <div class="text-center mt-12 text-sm text-gray-500 italic" data-aos="fade-up" data-aos-delay="400">
        <p>
            *Oui viens
        </p>
    </div>
</section>

