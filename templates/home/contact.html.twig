{% extends 'base.html.twig' %}

{% block title %}Contact - VAL Fusion{% endblock %}

{% block body %}
<style>
/* ============================================
   ANIMATIONS PREMIUM CONTACT PAGE
   ============================================ */
@keyframes pulse-border {
    0%, 100% {
        box-shadow: 0 0 0 0 rgba(99, 102, 241, 0.7);
    }
    50% {
        box-shadow: 0 0 0 10px rgba(99, 102, 241, 0);
    }
}

@keyframes float-icon {
    0%, 100% {
        transform: translateY(0);
    }
    50% {
        transform: translateY(-10px);
    }
}

@keyframes shimmer {
    0% {
        background-position: -1000px 0;
    }
    100% {
        background-position: 1000px 0;
    }
}

/* Fix scroll bugs */
section {
    transform: none !important;
}

/* Optimisation Mobile */
@media (max-width: 768px) {
    * {
        animation-duration: 0.3s !important;
    }
    
    .btn-contact {
        min-height: 48px;
        padding: 1rem 2rem !important;
        width: 100%;
        font-size: 1rem;
    }
    
    h1 {
        font-size: 2.5rem !important;
        line-height: 1.2;
    }
    
    h2 {
        font-size: 1.875rem !important;
    }
    
    /* Form inputs touch-friendly */
    .form-input {
        min-height: 48px;
        font-size: 16px !important; /* Évite le zoom iOS */
    }
    
    /* Cards contact full width */
    .contact-card {
        margin-bottom: 1rem;
    }
    
    /* Icons plus petites sur mobile */
    .contact-icon {
        width: 4rem !important;
        height: 4rem !important;
    }
}

/* Bouton contact premium */
.btn-contact {
    position: relative;
    overflow: hidden;
    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.btn-contact::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 200%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
    animation: shimmer 3s infinite;
}

.btn-contact:hover {
    transform: translateY(-3px);
    box-shadow: 0 20px 40px rgba(99, 102, 241, 0.5);
}

/* Input focus effect */
.form-input:focus {
    animation: pulse-border 1.5s ease-in-out;
}

/* Card hover effect */
.contact-card {
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.contact-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(99, 102, 241, 0.2);
}

.contact-card:hover .contact-icon {
    animation: float-icon 2s ease-in-out infinite;
}
</style>

{# Hero Section #}
<section class="relative min-h-[60vh] flex items-center justify-center overflow-hidden bg-gradient-to-br from-indigo-900 via-purple-900 to-violet-900">
    {# Pattern animé #}
    <div class="absolute inset-0 opacity-20" style="background-image: radial-gradient(circle, rgba(255,255,255,0.1) 1px, transparent 1px); background-size: 40px 40px;"></div>
    
    {# Gradient overlay #}
    <div class="absolute inset-0 bg-gradient-to-br from-indigo-900/40 to-purple-900/40"></div>
    
    {# Particules flottantes #}
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-20 left-10 w-3 h-3 bg-purple-400/50 rounded-full" style="animation: float 6s ease-in-out infinite;"></div>
        <div class="absolute top-40 right-20 w-2 h-2 bg-indigo-400/50 rounded-full" style="animation: float 7s ease-in-out infinite 1s;"></div>
        <div class="absolute bottom-40 left-1/4 w-4 h-4 bg-violet-400/50 rounded-full" style="animation: float 5s ease-in-out infinite 2s;"></div>
    </div>
    
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-5xl md:text-7xl font-black text-white mb-6 leading-tight" 
            data-aos="fade-up" 
            data-aos-duration="1000">
            <span class="bg-gradient-to-r from-indigo-400 via-purple-400 to-violet-400 bg-clip-text text-transparent">
                Erê Werê *
            </span>
        </h1>
        
        <p class="text-xl md:text-2xl text-purple-200 max-w-3xl mx-auto mb-8" 
           data-aos="fade-up" 
           data-aos-delay="200">
            Une question ? Un projet ? Notre équipe est à votre écoute
        </p>
    </div>
</section>

{# Section Informations de Contact #}
