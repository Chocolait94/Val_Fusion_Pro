<style>
    /* ============================================
       ANIMATIONS PREMIUM - OPTIMISÉES
       ============================================ */
    
    @keyframes float-home {
        0%, 100% { 
            transform: translateY(0px) translateX(0px) rotate(0deg);
        }
        33% { 
            transform: translateY(-20px) translateX(5px) rotate(2deg);
        }
        66% { 
            transform: translateY(-10px) translateX(-5px) rotate(-2deg);
        }
    }
    
    @keyframes pulse-glow {
        0%, 100% { 
            box-shadow: 0 0 20px rgba(255, 8, 68, 0.4);
            filter: brightness(1);
        }
        50% { 
            box-shadow: 0 0 40px rgba(255, 8, 68, 0.7), 0 0 60px rgba(255, 8, 68, 0.3);
            filter: brightness(1.1);
        }
    }
    
    @keyframes shimmer {
        0% { 
            transform: translateX(-100%) rotate(45deg);
            opacity: 0;
        }
        50% {
            opacity: 1;
        }
        100% { 
            transform: translateX(200%) rotate(45deg);
            opacity: 0;
        }
    }
    
    @keyframes particle-float {
        0%, 100% { 
            transform: translateY(0px) translateX(0px) scale(1);
            opacity: 0.3;
        }
        50% { 
            transform: translateY(-100px) translateX(50px) scale(1.5);
            opacity: 0.7;
        }
    }
    
    @keyframes glow-pulse {
        0%, 100% {
            filter: drop-shadow(0 0 10px rgba(220, 38, 38, 0.3));
            transform: scale(1);
        }
        50% {
            filter: drop-shadow(0 0 20px rgba(220, 38, 38, 0.6)) drop-shadow(0 0 35px rgba(220, 38, 38, 0.3));
            transform: scale(1.01);
        }
    }
    
    .animate-float-home {
        animation: float-home 8s ease-in-out infinite;
    }
    
    .animate-pulse-glow {
        animation: pulse-glow 4s ease-in-out infinite;
    }
    
    .animate-glow-pulse {
        animation: glow-pulse 5s ease-in-out infinite;
    }
    
    /* Particules améliorées avec gradient radial */
    .particle {
        position: absolute;
        background: radial-gradient(circle, rgba(255, 255, 255, 0.8) 0%, rgba(255, 255, 255, 0.4) 50%, transparent 70%);
        border-radius: 50%;
        pointer-events: none;
        filter: blur(1px);
    }
    
    /* Card shimmer effet premium */
    .card-shimmer {
        position: relative;
        overflow: hidden;
    }
    
    .card-shimmer::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -150%;
        width: 100%;
        height: 200%;
        background: linear-gradient(
            90deg, 
            transparent, 
            rgba(255, 255, 255, 0.1), 
            rgba(255, 255, 255, 0.5), 
            rgba(255, 255, 255, 0.1), 
            transparent
        );
        transform: rotate(45deg);
        transition: all 0.6s;
    }
    
    .card-shimmer:hover::before {
        animation: shimmer 1.8s ease-in-out;
    }
    
    /* Glassmorphism moderne */
    .glass-effect {
        background: rgba(255, 255, 255, 0.08);
        backdrop-filter: blur(12px) saturate(180%);
        -webkit-backdrop-filter: blur(12px) saturate(180%);
        border: 1px solid rgba(255, 255, 255, 0.15);
    }
    
    /* Parallax optimisé - sans bugs */
    .parallax-layer {
        will-change: transform;
        backface-visibility: hidden;
        transform: translateZ(0);
    }
    
    /* Fix pour éviter les bugs de scroll */
    .no-scroll-transform {
        transform: none !important;
    }
    
    /* ============================================
       RESPONSIVE ANIMATIONS & PERFORMANCE
       ============================================ */
    
    /* Respecter les préférences d'accessibilité */
    @media (prefers-reduced-motion: reduce) {
        .animate-float-home,
        .animate-pulse-glow,
        .animate-glow-pulse,
        .particles-container .particle {
            animation: none !important;
        }
        
        .card-shimmer:hover::before {
            animation: none !important;
        }
        
        * {
            animation-duration: 0.01ms !important;
            animation-iteration-count: 1 !important;
            transition-duration: 0.01ms !important;
        }
    }
    
    /* Tablettes et écrans moyens */
    @media (max-width: 1024px) {
        .animate-float-home {
            animation-duration: 12s !important;
        }
        
        .animate-pulse-glow {
            animation-duration: 6s !important;
        }
        
        .animate-glow-pulse {
            animation-duration: 8s !important;
        }
        
        /* Réduire l'intensité des effets */
        @keyframes glow-pulse {
            0%, 100% {
                filter: drop-shadow(0 0 8px rgba(220, 38, 38, 0.2));
                transform: scale(1);
            }
            50% {
                filter: drop-shadow(0 0 15px rgba(220, 38, 38, 0.4));
                transform: scale(1.005);
            }
        }
    }
    
    /* Mobiles et petits écrans */
    @media (max-width: 768px) {
        /* Ralentir encore plus les animations sur mobile */
        .animate-float-home {
            animation-duration: 15s !important;
        }
        
        .animate-pulse-glow {
            animation-duration: 8s !important;
        }
        
        .animate-glow-pulse {
            animation-duration: 10s !important;
        }
        
        /* Réduire le nombre de particules sur mobile */
        .particles-container .particle:nth-child(n+5) {
            display: none;
        }
        
        /* Désactiver certains effets coûteux */
        .glass-effect {
            backdrop-filter: none !important;
            -webkit-backdrop-filter: none !important;
            background: rgba(255, 255, 255, 0.1);
        }
        
        /* Simplifier les animations de particules */
        .particle {
            animation-duration: 20s !important;
        }
    }
    
    /* Très petits écrans */
    @media (max-width: 480px) {
        /* Désactiver les particules sur très petits écrans */
        .particles-container {
            display: none;
        }
        
        /* Réduire drastiquement les effets */
        .animate-pulse-glow,
        .animate-glow-pulse {
            animation: none !important;
        }
        
        /* Simplifier les animations float */
        .animate-float-home {
            animation: simple-float 20s ease-in-out infinite;
        }
        
        @keyframes simple-float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
        }
    }
    
    /* Écrans haute résolution - optimiser la performance */
    @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
        .parallax-layer {
            transform: translate3d(0, 0, 0);
            -webkit-transform: translate3d(0, 0, 0);
        }
    }
</style>

