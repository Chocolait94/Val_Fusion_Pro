<style>
/* Nouveau Slider CSS */
.radio {
  position: absolute;
  opacity: 0;
  pointer-events: none;
}

.st-slider {
  position: relative;
  width: 100%;
  min-height: 500px;
}

.images {
  overflow: hidden;
  width: 100%;
  height: 500px;
  position: relative;
}

.images-inner {
  width: 400%;
  height: 100%;
  transition: all 800ms cubic-bezier(0.770, 0.000, 0.175, 1.000);
  display: flex;
}

.image-slide {
  width: 25%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px;
}

.image-slide img {
  max-height: 450px;
  transition: all 0.5s ease-out;
}

.image-slide:hover img {
  transform: scale(1.05);
}

.fake-radio,
.radio-btn {
  transition: all 0.5s ease-out;
}

.fake-radio {
  text-align: center;
  margin-top: 30px;
}

.labels {
  position: relative;
  margin-top: 20px;
}

/* Move slides */
#slide1:checked ~ .images .images-inner {
  margin-left: 0;
}
#slide2:checked ~ .images .images-inner {
  margin-left: -100%;
}
#slide3:checked ~ .images .images-inner {
  margin-left: -200%;
}
#slide4:checked ~ .images .images-inner {
  margin-left: -300%;
}

/* Color of bullets */
#slide1:checked ~ div .fake-radio .radio-btn:nth-child(1),
#slide2:checked ~ div .fake-radio .radio-btn:nth-child(2),
#slide3:checked ~ div .fake-radio .radio-btn:nth-child(3),
#slide4:checked ~ div .fake-radio .radio-btn:nth-child(4) {
  background: #dc2626;
  transform: scale(1.3);
}

.radio-btn {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  background: #cbd5e1;
  display: inline-block !important;
  margin: 0 5px;
  cursor: pointer;
  transition: all 0.3s ease;
}

.radio-btn:hover {
  background: #94a3b8;
  transform: scale(1.2);
}

/* Text of slides */
#slide1:checked ~ .labels .label:nth-child(1),
#slide2:checked ~ .labels .label:nth-child(2),
#slide3:checked ~ .labels .label:nth-child(3),
#slide4:checked ~ .labels .label:nth-child(4) {
  opacity: 1;
}

.label {
  opacity: 0;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: -40px;
  color: #1f2937;
  transition: opacity 0.5s ease;
  white-space: nowrap;
}

/* AUTOPLAY for BULLETS - Synchronisé avec les images */
@keyframes bullet {
  0%, 23% {
    background: #dc2626;
    transform: scale(1.3);
  }
  25%, 100% {
    background: #cbd5e1;
    transform: scale(1);
  }
}

#play1:checked ~ div .fake-radio .radio-btn:nth-child(1) {
  animation: bullet 16000ms infinite 0ms;
}

#play1:checked ~ div .fake-radio .radio-btn:nth-child(2) {
  animation: bullet 16000ms infinite 4000ms;	
}

#play1:checked ~ div .fake-radio .radio-btn:nth-child(3) {
  animation: bullet 16000ms infinite 8000ms;	
}

#play1:checked ~ div .fake-radio .radio-btn:nth-child(4) {
  animation: bullet 16000ms infinite 12000ms;	
}

/* AUTOPLAY for SLIDES */
@keyframes slide {
  0%, 23.75% { margin-left: 0; }
  25%, 48.75% { margin-left: -100%; }
  50%, 73.75% { margin-left: -200%; }
  75%, 98.75% { margin-left: -300%; }
}

.st-slider > #play1:checked ~ .images .images-inner {
  animation: slide 16000ms infinite;	
}

/* AUTOPLAY for CAPTION - Synchronisé avec les images */
@keyframes caption {
  0%, 23% {
    opacity: 1;
  }
  25%, 100% {
    opacity: 0;
  }
}

#play1:checked ~ .labels .label:nth-child(1) {
  animation: caption 16000ms infinite 0ms;
}

#play1:checked ~ .labels .label:nth-child(2) {
  animation: caption 16000ms infinite 4000ms;	
}

#play1:checked ~ .labels .label:nth-child(3) {
  animation: caption 16000ms infinite 8000ms;	
}

#play1:checked ~ .labels .label:nth-child(4) {
  animation: caption 16000ms infinite 12000ms;	
}

/* Animation pour le fond */
@keyframes pulse-glow {
    0%, 100% {
        opacity: 0.2;
        transform: scale(1);
    }
    50% {
        opacity: 0.4;
        transform: scale(1.1);
    }
}

@keyframes pulse-slow {
    0%, 100% {
        opacity: 0.3;
        transform: scale(1) rotate(0deg);
    }
    50% {
        opacity: 0.6;
        transform: scale(1.2) rotate(5deg);
    }
}

@keyframes float-slow {
    0%, 100% {
        transform: translateY(0px) translateX(0px);
    }
    50% {
        transform: translateY(-20px) translateX(10px);
    }
