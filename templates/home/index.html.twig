            'copy': 'Sécurité',
            'link': '{{ path('app_val_securikom') }}'
        },
        {
            'src': '{{ asset('img/Val_formation.png') }}', 
            'title': 'VAL FORMATION',
            'copy': 'Formation BTP',
            'link': '{{ path('app_val_formation') }}'
        }
    ];

    let slides = [],
        captions = [];

    let autoplay = setInterval(function(){
        nextSlide();
    }, 5000);

    const container = document.getElementById('container-entites');
    const leftSlider = document.getElementById('left-slider-entites');
    const downButton = document.getElementById('down_button');
    const upButton = document.getElementById('up_button');
    const sliderCaption = document.getElementById('slider-caption');

    if (!container || !leftSlider || !downButton || !upButton || !sliderCaption) {
        return; // Exit if elements don't exist
    }

    downButton.addEventListener('click', function(e){
        e.preventDefault();
        clearInterval(autoplay);
        nextSlide();
        autoplay = setInterval(function(){
            nextSlide();
        }, 5000);
    });

    upButton.addEventListener('click', function(e){
        e.preventDefault();
        clearInterval(autoplay);
        previousSlide();
        autoplay = setInterval(function(){
            nextSlide();
        }, 5000);
    });

    // Create slides
    for (let i = 0; i < slideData.length; i++){
        let slide = document.createElement('div'),
            caption = document.createElement('div'),
            slideTitle = document.createElement('div'),
            slideSubhead = document.createElement('div'),
            slideButton = document.createElement('a');
        
        slide.classList.add('slide');
        let slideImg = document.createElement('img');
        slideImg.src = slideData[i].src;
        slideImg.alt = slideData[i].title;
        slideImg.loading = (i === 0) ? 'eager' : 'lazy';
        slide.appendChild(slideImg);
        caption.classList.add('caption-slider');
        slideTitle.classList.add('caption-heading');
        slideTitle.innerHTML = '<h1>' + slideData[i].title + '</h1>';
        slideSubhead.classList.add('caption-subhead');
        slideSubhead.innerHTML = '<span>' + slideData[i].copy + '</span>';
        slideButton.classList.add('btn-slider');
        slideButton.href = slideData[i].link;
        slideButton.textContent = 'En savoir plus';
        
        switch(i){
            case 0:
                slide.classList.add('current');
                caption.classList.add('current-caption');
                break;
            case 1:
                slide.classList.add('next');
                caption.classList.add('next-caption');
                break;
            case slideData.length - 1:
                slide.classList.add('previous');
                caption.classList.add('previous-caption');
                break;
            default:
                break;       
        }
        
        caption.appendChild(slideTitle);
        caption.appendChild(slideSubhead);
        caption.appendChild(slideButton);
        slides.push(slide);
        captions.push(caption);
        leftSlider.appendChild(slide);
        container.appendChild(caption);
    }

    // Hide the initial caption from HTML
    sliderCaption.style.display = 'none';

    function nextSlide(){
        // Nettoyer les classes change de tous les slides
        slides.forEach(function(s){ s.classList.remove('change'); });
        captions.forEach(function(c){ c.classList.remove('change'); });
        
        slides[0].classList.remove('current');
        slides[0].classList.add('previous', 'change');
        slides[1].classList.remove('next');
        slides[1].classList.add('current');
        slides[2].classList.add('next');
        let last = slides.length - 1;
        slides[last].classList.remove('previous');
        
        captions[0].classList.remove('current-caption');
        captions[0].classList.add('previous-caption', 'change');
        captions[1].classList.remove('next-caption');
        captions[1].classList.add('current-caption');
        captions[2].classList.add('next-caption');
        let lastCaption = captions.length - 1;
        captions[lastCaption].classList.remove('previous-caption');
        
        let placeholder = slides.shift();
        let captionsPlaceholder = captions.shift();
        slides.push(placeholder); 
        captions.push(captionsPlaceholder);
    }

    function previousSlide(){
        // Nettoyer les classes change de tous les slides
        slides.forEach(function(s){ s.classList.remove('change'); });
        captions.forEach(function(c){ c.classList.remove('change'); });
        
        let last = slides.length - 1;
        
        slides[0].classList.remove('current');
        slides[0].classList.add('next');
        slides[last].classList.remove('previous');
        slides[last].classList.add('current');
        slides[last - 1].classList.add('previous');
        
        captions[0].classList.remove('current-caption');
        captions[0].classList.add('next-caption');
        captions[last].classList.remove('previous-caption');
        captions[last].classList.add('current-caption');
        captions[last - 1].classList.add('previous-caption');
        
        let placeholder = slides.pop();
        let captionsPlaceholder = captions.pop();
        slides.unshift(placeholder); 
        captions.unshift(captionsPlaceholder);
    }
})();
</script>

