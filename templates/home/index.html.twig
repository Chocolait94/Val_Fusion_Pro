            if (servicesSection.style.transform && servicesSection.style.transform !== 'none') {
                forceNoTransform();
            }
        });
        
        observer.observe(servicesSection, {
            attributes: true,
            attributeFilter: ['style']
        });
        
        // Vérifier périodiquement (backup)
        setInterval(forceNoTransform, 100);
    }
    
    // Parallax effect for video background
    const videoElement = document.querySelector('.parallax-layer');
    
    window.addEventListener('scroll', () => {
        const scrolled = window.pageYOffset;
        if (videoElement && scrolled < window.innerHeight) {
            const speed = 0.3; // Réduit pour plus de fluidité
            videoElement.style.transform = `translate3d(0, ${scrolled * speed}px, 0)`;
        }
    });
    
    // 3D tilt effect on service cards
    const serviceCards = document.querySelectorAll('.service-card');
    
    serviceCards.forEach(card => {
        card.addEventListener('mouseenter', () => {
            const orbitCard = card.closest('.orbit-card');
            if (orbitCard) {
                orbitCard.style.animationPlayState = 'paused';
            }
        });
        
        card.addEventListener('mouseleave', () => {
            const orbitCard = card.closest('.orbit-card');
            if (orbitCard) {
                orbitCard.style.animationPlayState = 'running';
            }
        });
    });
    
