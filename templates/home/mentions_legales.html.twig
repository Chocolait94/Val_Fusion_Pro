{% extends 'base.html.twig' %}

{% block title %}Avis Juridique - VAL Fusion{% endblock %}

{% block body %}
<style>
/* Fix scroll bugs */
section {
    transform: none !important;
}

/* Animation du fond rouge */
@keyframes gradientShift {
    0%, 100% {
        background-position: 0% 50%;
    }
    50% {
        background-position: 100% 50%;
    }
}

@keyframes float {
    0%, 100% {
        transform: translateY(0px);
    }
    50% {
        transform: translateY(-20px);
    }
}

.hero-red {
    background: linear-gradient(135deg, #dc2626, #ef4444, #f87171, #fca5a5);
    background-size: 300% 300%;
    animation: gradientShift 15s ease infinite;
}

.floating-shapes {
    animation: float 6s ease-in-out infinite;
}

/* Optimisation Mobile */
@media (max-width: 768px) {
    h1 {
        font-size: 2.5rem !important;
        line-height: 1.2;
    }
    
    .legal-card {
        padding: 2rem 1.5rem !important;
    }
}

.legal-card {
    background: white;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
}

.legal-card:hover {
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
    transform: translateY(-2px);
}

.contact-icon {
    color: #dc2626;
    margin-right: 0.5rem;
}
</style>

{# Hero Section #}
<section class="relative py-20 lg:py-32 hero-red overflow-hidden">
    <div class="absolute inset-0 opacity-10" style="background-image: radial-gradient(circle, rgba(255,255,255,0.1) 1px, transparent 1px); background-size: 30px 30px;"></div>
    
    <!-- Formes flottantes animées -->
    <div class="absolute inset-0 overflow-hidden opacity-20">
        <div class="floating-shapes absolute top-20 left-10 w-32 h-32 bg-white rounded-full blur-3xl" style="animation-delay: 0s;"></div>
        <div class="floating-shapes absolute top-40 right-20 w-40 h-40 bg-white rounded-full blur-3xl" style="animation-delay: 2s;"></div>
        <div class="floating-shapes absolute bottom-20 left-1/4 w-36 h-36 bg-white rounded-full blur-3xl" style="animation-delay: 4s;"></div>
    </div>
    
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12" data-aos="fade-up">
            <h1 class="text-4xl md:text-6xl font-black text-red-600 mb-6">
                Avis juridique
            </h1>
        </div>
    </div>
</section>

{# Contenu Principal #}
<section class="py-20 bg-gray-50">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="legal-card rounded-3xl p-12" data-aos="fade-up">
            
            {# Nom de l'entreprise #}
            <div class="text-center mb-10">
                <h2 class="text-2xl font-bold text-gray-900 mb-2">Nom de l'entreprise</h2>
                <p class="text-xl text-gray-800 font-semibold">VAL FUSION</p>
            </div>
            
            {# Siège social #}
            <div class="text-center mb-10">
                <h2 class="text-2xl font-bold text-gray-900 mb-4">Siège social</h2>
                <p class="text-gray-700 text-lg leading-relaxed">
                    101 Rue Grande<br>
                    27100 Val-de-Reuil<br>
                    France
                </p>
            </div>
            
            {# Coordonnées #}
            <div class="text-center mb-10">
                <h2 class="text-2xl font-bold text-gray-900 mb-6">Coordonnées</h2>
                <div class="space-y-4">
                    <p class="text-lg text-gray-700">
                        <svg class="inline-block w-5 h-5 contact-icon" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
                        </svg>
                        02.32.40.58.03
                    </p>
                    <p class="text-lg text-gray-700">
                        <svg class="inline-block w-5 h-5 contact-icon" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
                        </svg>
                        contact@valfusion.fr
                    </p>
                </div>
            </div>
            
            {# Autorité de régulation #}
            <div class="text-center pt-8 border-t border-gray-200">
                <h2 class="text-2xl font-bold text-gray-900 mb-4">Autorité de régulation</h2>
                <p class="text-gray-700 text-lg leading-relaxed">
                    RCS d'Évreux (Registre du Commerce et des Sociétés)<br>
                    Greffe du Tribunal de Commerce d'Évreux
                </p>
            </div>
            
        </div>
    </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const sections = document.querySelectorAll('section');
    sections.forEach(section => {
        section.style.transform = 'none';
        section.style.willChange = 'auto';
    });
});
</script>

{% endblock %}
