/* Banner Container - 3D Carousel */
.banner {
    width: 100%;
    height: 100vh;
    min-height: 900px;
    text-align: center;
    overflow: hidden;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* 3D Slider Container */
.banner .slider {
    position: absolute;
    width: 280px;
    height: 380px;
    top: 30%;
    left: 50%;
    transform: translate(-50%, -50%);
    transform-style: preserve-3d;
    animation: autoRun 35s linear infinite;
}

/* Rotation automatique du carousel */
@keyframes autoRun {
    from {
        transform: translate(-50%, -50%) perspective(1400px) rotateX(-16deg) rotateY(0deg);
    }
    to {
        transform: translate(-50%, -50%) perspective(1400px) rotateX(-16deg) rotateY(360deg);
    }
}

/* Positionnement des cartes sur le carousel */
.banner .slider .item {
    position: absolute;
    inset: 0 0 0 0;
    transform: 
        rotateY(calc((var(--position) - 1) * (360deg / var(--quantity))))
        translateZ(400px);
}

/* Service Image Styling */
.service-image {
    width: 100%;
    height: 100%;
    background: white;
    border-radius: 20px;
    padding: 28px 20px;
    box-shadow: 
        0 20px 60px rgba(0, 0, 0, 0.15),
        0 0 1px rgba(0, 0, 0, 0.1);
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.service-image:hover {
    transform: scale(1.05);
    box-shadow: 
        0 30px 80px rgba(0, 0, 0, 0.2),
        0 0 2px rgba(0, 0, 0, 0.15);
}

/* Responsive Design */
@media (max-width: 1024px) {
    .banner {
        min-height: 800px;
    }
    
    .banner .slider {
        width: 280px;
        height: 380px;
    }
    
    .banner .slider .item {
        transform: 
            rotateY(calc((var(--position) - 1) * (360deg / var(--quantity))))
            translateZ(300px);
    }
}

@media (max-width: 768px) {
    .banner {
        min-height: 700px;
    }
    
    .banner .slider {
        width: 240px;
        height: 340px;
    }
    
    .banner .slider .item {
        transform: 
            rotateY(calc((var(--position) - 1) * (360deg / var(--quantity))))
            translateZ(280px);
    }
    
    @keyframes autoRun {
        from {
            transform: translate(-50%, -50%) perspective(1000px) rotateX(-16deg) rotateY(0deg);
        }
        to {
            transform: translate(-50%, -50%) perspective(1000px) rotateX(-16deg) rotateY(360deg);
        }
    }
}

@media (max-width: 480px) {
    .banner {
        min-height: 650px;
    }
    
    .banner .slider {
        width: 200px;
        height: 300px;
    }
    
    .banner .slider .item {
        transform: 
            rotateY(calc((var(--position) - 1) * (360deg / var(--quantity))))
            translateZ(240px);
    }
    
