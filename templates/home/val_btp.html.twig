<style>
/* ==========================
   3D CAROUSEL ROTATIF - Galerie
   ========================== */

/* Banner Container - 3D Carousel */
.banner {
    width: 100%;
    height: 100vh;
    min-height: 900px;
    text-align: center;
    overflow: hidden;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* 3D Slider Container */
.banner .slider {
    position: absolute;
    width: 280px;
    height: 380px;
    top: 30%;
    left: 50%;
    transform: translate(-50%, -50%);
    transform-style: preserve-3d;
    animation: autoRun 35s linear infinite;
}

/* Rotation automatique du carousel */
@keyframes autoRun {
    from {
        transform: translate(-50%, -50%) perspective(1400px) rotateX(-16deg) rotateY(0deg);
    }
    to {
        transform: translate(-50%, -50%) perspective(1400px) rotateX(-16deg) rotateY(360deg);
    }
}

/* Positionnement des cartes sur le carousel */
.banner .slider .item {
    position: absolute;
    inset: 0 0 0 0;
    transform: 
        rotateY(calc((var(--position) - 1) * (360deg / var(--quantity))))
        translateZ(400px);
}

/* Style des images dans le carousel */
.banner .slider .item .service-image {
    width: 100%;
    height: 100%;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    transition: all 0.3s ease;
}

.banner .slider .item .service-image:hover {
    transform: scale(1.05);
    box-shadow: 0 30px 80px rgba(220, 38, 38, 0.4);
}

.banner .slider .item .service-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

/* Animations pour les éléments de fond */
@keyframes float-slow {
    0%, 100% {
        transform: translateY(0) translateX(0);
    }
    50% {
        transform: translateY(-20px) translateX(10px);
    }
