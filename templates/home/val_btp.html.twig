/* ============================================
   ANIMATIONS PREMIUM VAL BTP
   ============================================ */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(40px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes slideInRight {
    from {
        opacity: 0;
        transform: translateX(-60px);
    }
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

@keyframes buildingGrow {
    0% {
        transform: scaleY(0);
        transform-origin: bottom;
    }
    100% {
        transform: scaleY(1);
        transform-origin: bottom;
    }
}

@keyframes toolRotate {
    0%, 100% {
        transform: rotate(-5deg);
    }
    50% {
        transform: rotate(5deg);
    }
}

@keyframes shimmerGold {
    0% {
        background-position: -200% center;
    }
    100% {
        background-position: 200% center;
    }
}

/* Fix scroll bugs */
section {
    transform: none !important;
}

/* Optimisation Mobile */
@media (max-width: 768px) {
    /* Réduire les animations sur mobile pour performance */
    * {
        animation-duration: 0.3s !important;
    }
    
    /* Touch-friendly buttons */
    .btn-btp {
        min-height: 48px;
        padding: 1rem 2rem !important;
    }
    
    /* Meilleur espacement mobile */
    h1 {
        font-size: 2.5rem !important;
        line-height: 1.2;
    }
    
    h2 {
        font-size: 1.875rem !important;
    }
    
    /* Cards empilées sur mobile */
    .group {
        margin-bottom: 1rem;
    }
}

.no-scroll-bug {
    position: relative;
    isolation: isolate;
}

/* Effet de construction */
.construction-line {
    position: relative;
    overflow: hidden;
}

.construction-line::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 4px;
    background: linear-gradient(90deg, transparent, #dc2626, transparent);
    animation: buildProgress 3s ease-in-out infinite;
}

@keyframes buildProgress {
    0%, 100% {
        left: -100%;
    }
    50% {
        left: 100%;
    }
}

/* Texte avec effet béton */
.concrete-text {
    background: linear-gradient(135deg, #6b7280 0%, #9ca3af 50%, #6b7280 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.3));
}

/* Bouton BTP premium */
.btn-btp {
    position: relative;
    overflow: hidden;
    background: linear-gradient(135deg, #dc2626 0%, #991b1b 100%);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.btn-btp::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.2);
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
}

.btn-btp:hover::before {
    width: 300px;
    height: 300px;
}

.btn-btp:hover {
    transform: translateY(-3px);
    box-shadow: 0 20px 40px rgba(220, 38, 38, 0.4);
}
