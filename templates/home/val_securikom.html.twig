<style>
/* ============================================
   ANIMATIONS PREMIUM VAL SÉCURIKOM
   ============================================ */
@keyframes radarScan {
    0% {
        transform: rotate(0deg);
    }
    100% {
        transform: rotate(360deg);
    }
}

@keyframes shieldPulse {
    0%, 100% {
        transform: scale(1);
        filter: drop-shadow(0 0 10px rgba(239, 68, 68, 0.5));
    }
    50% {
        transform: scale(1.05);
        filter: drop-shadow(0 0 20px rgba(239, 68, 68, 0.8));
    }
}

@keyframes alertBlink {
    0%, 100% {
        opacity: 1;
    }
    50% {
        opacity: 0.4;
    }
}

@keyframes securitySweep {
    0% {
        left: -100%;
    }
    100% {
        left: 100%;
    }
}

/* Fix scroll bugs */
section {
    transform: none !important;
}

/* Optimisation Mobile - Améliorée */
@media (max-width: 1024px) {
    * {
        animation-duration: 5s !important;
    }
}

@media (max-width: 768px) {
    * {
        animation-duration: 7s !important;
    }
    
    .animate-bounce, .animate-pulse {
        animation: none !important;
    }
    
    .btn-security {
        min-height: 48px;
        padding: 1rem 2rem !important;
        width: 100%;
    }
    
    h1 {
        font-size: 2.5rem !important;
        line-height: 1.2;
    }
    
    h2 {
        font-size: 1.875rem !important;
    }
    
    /* Radar effects réduits sur mobile */
    .radar-effect {
        width: 80%;
        height: 80%;
    }
    
    /* Meilleur espacement */
    .group {
        margin-bottom: 1rem;
    }
}

/* Effet radar */
.radar-effect {
    position: relative;
}

.radar-effect::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100%;
    height: 100%;
    background: conic-gradient(from 0deg, transparent 0%, rgba(239, 68, 68, 0.3) 50%, transparent 100%);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    animation: radarScan 4s linear infinite;
}

/* Texte sécurisé */
.security-text {
    background: linear-gradient(135deg, #dc2626 0%, #ef4444 50%, #f87171 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    filter: drop-shadow(0 4px 8px rgba(220, 38, 38, 0.3));
}

/* Bouton sécurité premium */
.btn-security {
    position: relative;
    overflow: hidden;
    background: linear-gradient(135deg, #dc2626 0%, #991b1b 100%);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.btn-security::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(45deg, transparent 30%, rgba(255, 255, 255, 0.2) 50%, transparent 70%);
    animation: securitySweep 3s linear infinite;
}

.btn-security:hover {
    transform: translateY(-3px);
    box-shadow: 0 20px 40px rgba(220, 38, 38, 0.4);
}

/* Badge alerte */
.alert-badge {
    animation: alertBlink 2s ease-in-out infinite;
}

/* Ligne de sécurité */
.security-line {
    position: relative;
}

.security-line::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 100%;
    height: 3px;
    background: repeating-linear-gradient(
        90deg,
        #dc2626 0px,
        #dc2626 10px,
        #fef2f2 10px,
        #fef2f2 20px
    );
}
</style>

